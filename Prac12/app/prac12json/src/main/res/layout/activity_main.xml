<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать JSON объект и сохранить" />

    <Button
        android:id="@+id/button_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прочитать JSON объект" />

    <Button
        android:id="@+id/button_create_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать JSON массив и сохранить" />

    <Button
        android:id="@+id/button_read_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прочитать JSON массив" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/text_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </ScrollView>
</LinearLayout>