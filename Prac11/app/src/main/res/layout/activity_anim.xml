<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- 1. Вращающаяся картинка -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="24dp" />

    <!-- 2. Кнопка для анимации перемещения -->
    <Button
        android:id="@+id/move_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переместить"
        android:layout_marginBottom="24dp" />

    <!-- 3. Текст для анимации масштабирования -->
    <TextView
        android:id="@+id/scale_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажми для увеличения"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <!-- 4. Элемент для анимации прозрачности -->
    <View
        android:id="@+id/fade"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        android:layout_marginBottom="24dp" />

    <!-- Дополнительная анимация - комбинированная -->
    <Button
        android:id="@+id/comboButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комбинированная анимация"
        android:backgroundTint="@color/purple_500" />

</LinearLayout>